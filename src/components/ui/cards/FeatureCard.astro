---
// Feature Card
// ------------
// Description: The Card for presenting a feature
// Properties:
// - Title: the title of the card
// - Subtitle: the subtitle of the card
// - Image: the main image of the card
// - Link: The link to the blog post
// Reference: https://wind-ui.com/components/cards/

// Components
// - UI
import Card from './BasicCard.astro'

// Props
type Props = {
	title?: string
	subtitle?: string
	image?: any
	link?: string
}
const { title , subtitle, image, link } = Astro.props
---

<div class="feature-card-wrapper">
  <Card
    title={title}
    subtitle={subtitle}
    titleSize="xl"
    link={link}
    image={image}
    type="image-bottom"
    classes="!bg-neutral-50 !shadow-none dark:!bg-neutral-900 h-full justify-between border border-neutral-100 dark:border-neutral-800 transition-all duration-300 hover:-translate-y-1 hover:shadow-md hover:!bg-primary-500 hover:!text-white hover:border-primary-600"
  />
</div>

<style>
  /* Ensure title text changes to white on hover */
  .feature-card-wrapper:hover :global(h1),
  .feature-card-wrapper:hover :global(h2),
  .feature-card-wrapper:hover :global(h3),
  .feature-card-wrapper:hover :global(.card-title) {
    color: white !important;
  }
</style>
