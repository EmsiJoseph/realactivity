---
import Section from "../../ui/Section.astro";
import { Image } from "astro:assets";
import Row from "../../ui/Row.astro";
import Col from "../../ui/Col.astro";
import Button from "../../ui/Button.astro";

const partners = [
    { src: "/logo-vertical.svg", alt: "RealActivity" },
    { src: "/partners/dartmouth-health.svg", alt: "Dartmouth Health" },
    { src: "/partners/microsoft.svg", alt: "Microsoft" }
];
---

<Section id="wheelhouse" classes="bg-primary-500 rounded-3xl md:rounded-[6rem] py-8 md:py-12 text-white text-center mb-48">
    <div class="max-w-5xl mx-auto px-4 md:px-6">
        <Row classes="items-center fade-in-bottom justify-center">
            <!-- Wheelhouse logo - larger to match combined height -->
            <Col span="3" spanMobile="12" classes="flex-shrink-0 self-center fade-in">
                <Image src="/partners/wheelhouse-primary.svg" alt="Wheelhouse AI CoE" width={300} height={300} class="w-28 md:w-40 mx-auto" />
            </Col>

            <!-- Content column with headline and partner logos - removed align="center" -->
            <Col span="9" spanMobile="12" classes="flex flex-col text-white gap-3 md:text-left fade-in delay-100">
                <!-- Headline -->
                <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight text-white">
                    AI Governance Built<br class="hidden sm:block"> for Healthcare Leadership
                </h2>
                
                <!-- Partner Logos with justify-start instead of justify-center -->
                <div class="inline-flex flex-wrap md:justify-start justify-center gap-4 mt-2 w-auto">
                    {partners.map((partner, index) => {
                        // No div wrapper for Dartmouth Health logo (index 1)
                        if (index === 1) {
                            return <Image src={partner.src} alt={partner.alt} width={120} height={40} class="w-auto fade-in delay-200" />;
                        }
                        // Regular div wrapper for other logos
                        return (
                            <div class={`bg-white rounded-lg px-3 py-2 md:px-4 shadow flex items-center fade-in delay-${(index + 2) * 100}`}>
                                <Image src={partner.src} alt={partner.alt} width={120} height={40} class="max-h-10 w-auto" />
                            </div>
                        );
                    })}
                </div>
            </Col>
        </Row>

        <Row classes="mt-12 justify-center">
            <Col span="12" align="center" classes="fade-in delay-300">
                <!-- Description - with explicit text-white -->
                <p class="text-base md:text-lg max-w-3xl text-white mx-auto">
                    <strong class="font-semibold">A center of excellence</strong> where innovation meets practicality. Board, leadership, and
                    organization training, governance, incident reporting, secure Copilot, and more. A collaboration with
                    RealActivity, Dartmouth Health, and Microsoft, delivered to the healthcare community by RealActivity.
                </p>
            </Col>
        </Row>

        <Row classes="mt-12 justify-center">
            <Col span="12" align="center" classes="fade-in delay-400">
                <Button style="secondary" size="lg" link="/">
                    See all features
                </Button>
            </Col>
        </Row>
    </div>
</Section>
