---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTA.astro'
import Features from '../components/blocks/features/FeatureCards.astro'
import Testimonial from '../components/blocks/testimonials/BasicDark.astro'
import HighlightBlocks from '../components/blocks/highlights/HighlightRows.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import YouTubeEmbed from '../components/ui/YouTubeEmbed.astro'

// Content
// - Testimonial background
import testimonialBackground from '../assets/testimonial-bg-01.webp'
import LogoCarousel from '../components/blocks/hero/LogoCarousel.astro'
import MoreIntegrations from '../components/blocks/features/MoreIntegrations.astro'
import Basic from '../components/blocks/socialproof/Basic.astro'
import Metrics from '../components/blocks/socialproof/Metrics.astro'
import Wheelhouse from '../components/blocks/features/Wheelhouse.astro'
import EmailForm from '../components/blocks/contact/EmailForm.astro'
