// - SEO
const SEO = {
	title: 'RealActivity',
	description: 'Reduce Physician Burnout & Operational Costs with AI built for Healthcare.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero />
	<LogoCarousel />
	<Features />
	<MoreIntegrations />
	<Testimonial bg={testimonialBackground} bgPosition="right" />
	<Metrics />
	<HighlightBlocks />
	<!--Wheelhouse-->
	<Wheelhouse />
	<!--Get AI Ready-->
	<EmailForm />

	<YouTubeEmbed
		url="https://youtu.be/Ls3WOE9dhOQ?si=44ZYoMPxytFk-r5V"
		width="100%%"
		aspectRatio="16/9"
		class="max-w-4xl"
	/>

	<!--Raps Copilot-->
    <RapsCopilot/>
	<!--Agents Suite-->
	<!--One Seed-->
	<!--Security Badges-->
	<!--Advisory Services-->
	<!--Founders Hub-->
	<!--Community-->
